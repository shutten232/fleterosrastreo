{
  "rules": {
    ".read": "auth != null",
    ".write": "auth != null",
    "live": {
      "$fleteroId": {
        ".write": "auth != null && newData.child('fleteroId').val() == $fleteroId",
        ".validate": "newData.hasChildren(['fleteroId','ts']) && newData.child('ts').isNumber() && newData.child('ts').val() <= now && newData.child('ts').val() >= (now - 2592000000)"
      }
    },
    "arrivals": {
      "$id": {
        ".write": "auth != null",
        ".validate": "newData.hasChildren(['fleteroId','ts']) && newData.child('ts').isNumber() && newData.child('ts').val() <= now && newData.child('ts').val() >= (now - 2592000000)"
      }
    }
  }
}